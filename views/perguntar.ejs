<%- include('partials/header') %>

<body>

    <%- include('partials/navbar') %>

    <div class="container">
        <div class="card mt-5" id="formulario-pergunta">
            <div class="card-header">
                <h3>Realizar pergunta</h3>

            </div>
            <div class="card-body">
                <form action="/salvarpergunta" method="POST">
                    <label for="">Titulo</label>
                    <input type="text" placeholder="Titulo" class="form-control mb-3" name="titulo">
                    <label for="">Descricao</label>
                    <textarea placeholder="Descreva sua pergunta aqui" name="descricao" class="form-control mb-3"></textarea>
                    <button class="btn btn-primary">Perguntar</button>
                </form>

            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
