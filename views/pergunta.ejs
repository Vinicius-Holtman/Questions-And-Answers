<%- include('partials/header') %>

<body>
    <%- include('partials/navbar') %>

    <div class="container">
       <hr>
       <h1><%= pergunta.titulo %></h1>
       <p><%= pergunta.descricao %> </p>
       <hr>
       <form action="/responder" method="POST">
           <h3>Responda</h3>
           <label for="">Resposta:</label>
           <textarea placeholder="Digite sua resposta" class="form-control mb-3" name="corpo"></textarea>
           <input type="hidden" name="pergunta" value="<%= pergunta.id %> ">
           <button type="submit" class="btn btn-primary">Responder</button>
       </form>
       <hr>
       <h3>Respostas</h3>
       <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <%= resposta.corpo %>
                </div>
            </div>
        <% }) %> 

    </div>

</body>
<%- include('partials/footer') %>